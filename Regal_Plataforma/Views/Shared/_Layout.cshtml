    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Site css mobile -->
    <link rel="stylesheet" href="~/css/site_mobile.css" asp-append-version="true" />
    <!-- Bootstrap-select CSS -->
