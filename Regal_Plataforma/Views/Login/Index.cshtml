@model VM_Login
@{
    ViewData["Title"] = "Inicio Sesion";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="login-container">
        <h2 class="text-center">Inicio de Sesión</h2>
        <form method="post" action="/Account/Login">
            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input asp-for="usuario" type="text" class="form-control" required>
                <span class="text-danger">@Html.ValidationMessage("usuario")</span>
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="contrasena" type="password" class="form-control" required>
                <span class="text-danger">@Html.ValidationMessage("contrasena")</span>
            </div>
            <button type="submit" asp-controller="Login" asp-action="Index" class="btn w-100">Iniciar Sesion</button>
        </form>
    </div>
</div>
