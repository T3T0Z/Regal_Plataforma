@model VM_DetallesUsuario;

<div class="encargo-container">
    <div class="encargo-header" onclick="toggleUsuarioBody()">
        <span class="header-title">Información General</span>
    </div>

    <div id="detallesUsuario" class="encargo-body">
        <div class="info-line">
            <div class="info-col">
                <span class="info-label">Usuario:</span>
                <span>@Model.Usuario.Usuario1</span>
            </div>
            <div class="info-col">
                <span class="info-label">Nombre:</span>
                <span>@Model.Usuario.Nombre</span>
            </div>
            <div class="info-col">
                <span class="info-label">Apellidos:</span>
                <span>@Model.Usuario.Apellidos</span>
            </div>
        </div>

        <div class="info-line">
            <div class="info-col">
                <span class="info-label">Rol:</span>
                <span>@Model.Usuario.RolPkNavigation?.Rol</span>
            </div>
            <div class="info-col">
                <span class="info-label">Fecha Creación:</span>
                <span>@Model.Usuario.FechaCreacion.ToString("dd/MM/yyyy")</span>
            </div>
        </div>
    </div>
</div>
<script>
    function toggleUsuarioBody() {
        const body = document.getElementById("detallesUsuario");

        if (body.style.display === "none" || body.classList.contains("d-none")) {
            body.style.display = "block";
            body.classList.remove("d-none");
        } else {
            body.style.display = "none";
            body.classList.add("d-none");
        }
    }
</script>